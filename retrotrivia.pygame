### Simple static Screen
class StaticScreen:
    QB = None
    circle_cache = {}

    def __init__(self, next_scene, img, text):
        self.background = pygame.Surface((SCREEN.get_width(), SCREEN.get_height()))
        self.square = int(SCREEN.get_height()/20)
        self.img = img if img else None
        self.additional_text = None
        self.next_scene = next_scene
        self.txt_rendered = []
        self.text_rect = pygame.Rect(
            SCREEN.get_width()//2.5,
            SCREEN.get_height()//3,
            SCREEN.get_width()//3,
            SCREEN.get_height()//3
        )
        self.loading_text_obj = RenderedText(text, TEXT_COLOR, TEXT_HALO_MENU, self.text_rect)
        self.logo_pos = None
        self.logo_surface = None
        self.logo_glow_mask = None   # note: consistent name

    def start(self, text):
        self.txt_rendered = []
        self.additional_text = text if text else None

        # Only the back_cover in background
        self.back_img = pygame.image.load('assets/back_cover.jpg')
        self.back_img = pygame.transform.scale(
            self.back_img,
            (SCREEN.get_width(), SCREEN.get_height())
        )
        self.background.blit(self.back_img, (0, 0))

        self.logo_pos = None
        self.logo_surface = None
        self.logo_glow_mask = None

        if self.img:
            # Load and scale logo
            self.foreground = pygame.image.load(self.img).convert_alpha()
            img_ratio = float(self.foreground.get_width()) / self.foreground.get_height()
            self.foreground = pygame.transform.smoothscale(
                self.foreground,
                (int(SCREEN.get_width() / 8 * img_ratio),
                 int(SCREEN.get_width() / 8))
            )

            logo_x = int(SCREEN.get_width() * 0.375)
            logo_y = int(SCREEN.get_height() / 8)

            self.logo_pos = (logo_x, logo_y)
            self.logo_surface = self.foreground.convert_alpha()

            # Build a glow mask following the logo shape
            lw, lh = self.logo_surface.get_size()
            factor = 1.6  # how far out the glow extends
            glow_w = int(lw * factor)
            glow_h = int(lh * factor)

            # Upscaled logo
            glow_mask = pygame.transform.smoothscale(
                self.logo_surface, (glow_w, glow_h)
            ).convert_alpha()

            # "Blur" it by downscaling and upscaling a few times to kill detail
            for _ in range(4):
                small_w = max(1, glow_w // 2)
                small_h = max(1, glow_h // 2)
                glow_mask = pygame.transform.smoothscale(glow_mask, (small_w, small_h))
                glow_mask = pygame.transform.smoothscale(glow_mask, (glow_w, glow_h))

            # Tint with a bright halo color, but keep alpha
            halo_color = pygame.Color(TEXT_HALO_MENU)
            tinted = pygame.Surface((glow_w, glow_h), pygame.SRCALPHA)
            tinted.fill((0, 0, 0, 0))
            tinted.blit(glow_mask, (0, 0))

            color_only = pygame.Surface((glow_w, glow_h), pygame.SRCALPHA)
            color_only.fill((halo_color.r, halo_color.g, halo_color.b, 255))
            tinted.blit(color_only, (0, 0), special_flags=pygame.BLEND_RGBA_MULT)

            self.logo_glow_mask = tinted


        if self.additional_text:
            self.loading_text_obj = RenderedText(
                self.additional_text, TEXT_COLOR, TEXT_HALO_MENU, self.text_rect
            )

    def additional(self, text):
        self.loading_text_obj = RenderedText(text, TEXT_COLOR, TEXT_HALO_MENU, self.text_rect)

    def draw(self):
        # Base background
        SCREEN.blit(self.background, (0, 0))

        # Logo-based glowing effect
        if self.logo_pos and self.logo_surface and self.logo_glow_mask:
            logo_x, logo_y = self.logo_pos
            lw, lh = self.logo_surface.get_size()
            gw, gh = self.logo_glow_mask.get_size()

            cx = logo_x + lw // 2
            cy = logo_y + lh // 2

            now = pygame.time.get_ticks()
            phase = (now % 2000) / 2000.0
            p = 0.5 + 0.5 * math.sin(phase * 2 * math.pi)

            scale_factor = 1.0 + 0.15 * p
            cur_w = int(gw * scale_factor)
            cur_h = int(gh * scale_factor)
            glow_scaled = pygame.transform.smoothscale(self.logo_glow_mask, (cur_w, cur_h))

            alpha = int(5 + 45 * p)
            glow_scaled.set_alpha(alpha)

            gx = cx - cur_w // 2
            gy = cy - cur_h // 2

            glow_layer = pygame.Surface((SCREEN.get_width(), SCREEN.get_height()), pygame.SRCALPHA)
            glow_layer.fill((0, 0, 0, 0))
            glow_layer.blit(glow_scaled, (gx, gy))

            SCREEN.blit(glow_layer, (0, 0))
            SCREEN.blit(self.logo_surface, self.logo_pos)

        # Text overlays
        for rendered in self.txt_rendered:
            SCREEN.blit(rendered.surface, (rendered.rect.x, rendered.rect.y))
        if self.loading_text_obj:
            SCREEN.blit(self.loading_text_obj.surface,
                        (self.loading_text_obj.rect.x, self.loading_text_obj.rect.y))


    def update(self, events, dt):
        for event in events:
            if key_pressed(event, [JOYSTICKS[0]]) == (0, 'action'):
                return (self.next_scene, None)

    def initialize_QB(self):
        if self.QB is None:
            self.QB = QuestionBank()
            self.QB.initialize_Q()


