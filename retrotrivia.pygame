### Colorize icon
def colorize_icon(image, color):
    newimage = image.copy()
    newimage.fill((0, 0, 0, 255), None, pygame.BLEND_RGBA_MULT)
    newimage.fill(color[0:3] + (0,), None, pygame.BLEND_RGBA_ADD)
    return newimage

